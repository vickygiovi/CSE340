<% if (title) { %>
<h1><%= title %></h1>
<% } %> <%- messages() %> <% if (errors) { %>
<ul class="notice">
  <% errors.array().forEach(error => { %>
  <li><%= error.msg %></li>
  <% }) %>
</ul>
<% } %>

<div class="form-container">
  <form class="form-flex" action="/account/login" method="post">
    <label class="field-margin" for="email">Email address</label>
    <input
      class="field-margin input"
      type="email"
      id="email"
      name="account_email"
      required
      value="<%= locals.account_email %>"
    />
    <label class="field-margin" for="pass">Password</label>
    <span class="pass_required"
      >Passwords must be at least 12 characters and contain at least 1 number, 1
      capital letter and 1 special character</span
    >
    <input
      class="field-margin input"
      type="password"
      id="pass"
      name="account_password"
      required
      pattern="^(?=.*\d)(?=.*[a-z])(?=.*[A-Z])(?=.*[^a-zA-Z0-9])(?!.*\s).{12,}$"
    />
    <input class="field-margin submit" type="submit" value="Login" />
    <p>No account? <a href="/account/register">Sign-up</a></p>
  </form>
</div>
