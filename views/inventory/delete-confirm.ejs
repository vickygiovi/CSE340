<% if (title) { %>
<h1><%= title %></h1>
<% } %> <%- messages() %> <% if (errors) { %>
<ul class="notice">
  <% errors.array().forEach(error => { %>
  <li><%= error.msg %></li>
  <% }) %>
</ul>
<% } %> <%# inv_make, inv_model, inv_year, inv_description, inv_image,
inv_thumbnail, inv_price, inv_miles, inv_color %>

<div class="form-container">
  <form id="deleteForm" class="form-flex padding-form" action="/inv/delete" method="post">
    <label class="field-margin" for="inv_make">Make</label>
    <input
      readonly
      class="field-margin input"
      type="text"
      id="inv_make"
      name="inv_make"
      required
      minlength="3"
      value="<%= inv_make %>"
    />

    <label class="field-margin" for="inv_model">Model</label>
    <input
      readonly
      class="field-margin input"
      type="text"
      id="inv_model"
      name="inv_model"
      required
      minlength="3"
      value="<%= inv_model %>"
    />

    <label class="field-margin" for="inv_year">Year</label>
    <input
      readonly
      class="field-margin input"
      type="number"
      id="inv_year"
      name="inv_year"
      required
      min="1000"
      max="9999"
      value="<%= inv_year %>"
    />

    <label class="field-margin" for="inv_price">Price</label>
    <input
      readonly
      class="field-margin input"
      type="number"
      id="inv_price"
      name="inv_price"
      required
      value="<%= inv_price %>"
    />

    <span class="pass_required"
      >Confirm Deletion - The delete is permanent.</span
    >

    <input
      id="button-edit-inv"
      class="field-margin submit"
      type="submit"
      name="submit"
      value="Delete Vehicle"
    />

    <input type="hidden" name="inv_id"
<% if(locals.inv_id) { %> value="<%= locals.inv_id %>"
<% } %>>
  </form>
</div>

