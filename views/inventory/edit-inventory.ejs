<% if (title) { %>
<h1><%= title %></h1>
<% } %> <%- messages() %> <% if (errors) { %>
<ul class="notice">
  <% errors.array().forEach(error => { %>
  <li><%= error.msg %></li>
  <% }) %>
</ul>
<% } %> <%# inv_make, inv_model, inv_year, inv_description, inv_image,
inv_thumbnail, inv_price, inv_miles, inv_color %>

<div class="form-container">
  <form id="updateForm" class="form-flex padding-form" action="/inv/update" method="post">
    <%- classificationSelect %>
    <label class="field-margin" for="inv_make">Make</label>
    <input
      class="field-margin input"
      type="text"
      id="inv_make"
      name="inv_make"
      required
      minlength="3"
      value="<%= inv_make %>"
    />

    <label class="field-margin" for="inv_model">Model</label>
    <input
      class="field-margin input"
      type="text"
      id="inv_model"
      name="inv_model"
      required
      minlength="3"
      value="<%= inv_model %>"
    />

    <label class="field-margin" for="inv_year">Year</label>
    <input
      class="field-margin input"
      type="number"
      id="inv_year"
      name="inv_year"
      required
      min="1000"
      max="9999"
      value="<%= inv_year %>"
    />

    <label class="field-margin" for="inv_description">Description</label>
    <input
      class="field-margin input"
      type="text"
      id="inv_description"
      name="inv_description"
      required
      value="<%= inv_description %>"
    />

    <label class="field-margin" for="inv_image">Image</label>
    <input
      class="field-margin input"
      type="text"
      id="inv_image"
      name="inv_image"
      required
      value="/images/vehicles/no-image.png"
    />

    <label class="field-margin" for="inv_thumbnail">Thumbnail</label>
    <input
      class="field-margin input"
      type="text"
      id="inv_thumbnail"
      name="inv_thumbnail"
      required
      value="/images/vehicles/no-image.png"
    />

    <label class="field-margin" for="inv_price">Price</label>
    <input
      class="field-margin input"
      type="number"
      id="inv_price"
      name="inv_price"
      required
      value="<%= inv_price %>"
    />

    <label class="field-margin" for="inv_miles">Miles</label>
    <input
      class="field-margin input"
      type="number"
      id="inv_miles"
      name="inv_miles"
      required
      value="<%= inv_miles %>"
    />

    <label class="field-margin" for="inv_color">Color</label>
    <input
      class="field-margin input"
      type="text"
      id="inv_color"
      name="inv_color"
      required
      value="<%= inv_color %>"
    />

    <input
      id="button-edit-inv"
      class="field-margin submit"
      type="submit"
      name="submit"
      value="Update Vehicle"
      disabled
    />

    <input type="hidden" name="inv_id"
<% if(locals.inv_id) { %> value="<%= locals.inv_id %>"
<% } %>>
  </form>
</div>

<script src="../../js/inv-update.js"></script>

